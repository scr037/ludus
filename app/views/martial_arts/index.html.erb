<p id="notice"><%= notice %></p>

<h1>Arte marcial</h1>
<%= link_to 'Crear arte marcial', new_martial_art_path %>
<br><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @martial_arts.each do |martial_art| %>
      <tr>
        <td><%= martial_art.name %></td>
        <!-- <td><%= link_to 'Show', martial_art %></td> -->
        <td><%= link_to 'Editar', edit_martial_art_path(martial_art) %></td>
        <td><%= link_to 'Borrar', martial_art, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
