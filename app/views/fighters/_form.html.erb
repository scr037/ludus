<%= form_with(model: fighter, local: true) do |form| %>
  <% if fighter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fighter.errors.count, "error") %> prohibited this fighter from being saved:</h2>

      <ul>
        <% fighter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.file_field :avatar %>

  <div class="field">
    <%= form.label :firstname %>
    <%= form.text_field :firstname %>
  </div>

  <div class="field">
    <%= form.label :lastname %>
    <%= form.text_field :lastname %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :gender_id %>
    <%= form.select(:gender_id, Gender.all.collect { |v| [ v.name, v.id ] }, {}, { "data-placeholder": "Gender" }) %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.date_select :date_of_birth %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select(:category_id, Category.all.collect { |v| [ v.name, v.id ] }, {}, { "data-placeholder": "Category" }) %>
  </div>

  <div class="field">
    <%= form.label :martial_art_id %>
    <%= form.select(:martial_art_id, MartialArt.all.collect { |v| [ v.name, v.id ] }, {}, { "data-placeholder": "Gender" }) %>
  </div>

  <div class="field">
    <%= form.label :activity_begin %>
    <%= form.date_select :activity_begin %>
  </div>

  <div class="field">
    <%= form.label :last_payment %>
    <%= form.date_select :last_payment %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

