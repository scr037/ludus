<p id="notice"><%= notice %></p>

<h1>Género</h1>
<%= link_to 'Crear Género', new_gender_path %>
<br><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genders.each do |gender| %>
      <tr>
        <td><%= gender.name %></td>
        <!--<td><%= link_to 'Show', gender %></td>-->
        <td><%= link_to 'Editar', edit_gender_path(gender) %></td>
        <td><%= link_to 'Borrar', gender, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>